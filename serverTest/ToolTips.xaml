<s:TagVisualization x:Class="serverTest.ToolTips"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:s="http://schemas.microsoft.com/surface/2008"
    Loaded="ToolTips_Loaded">
<Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Image Grid.Row="0" Grid.Column="0" Width="80" ToolTip="Scrach-out" Source="/serverTest;component/Images/groww.jpg"></Image>
        <TextBox Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">Grow Font</TextBox>
        <Image Grid.Row="1" Grid.Column="0" Width="80" ToolTip="cut" Source="/serverTest;component/Images/shrinkk.jpg"></Image>
        <TextBox Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">Shrink Font</TextBox>

    </Grid>
</s:TagVisualization>
